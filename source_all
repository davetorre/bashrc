BASH_DIR="`pwd`/.bash"

. $BASH_DIR/git-completion
. $BASH_DIR/colors
. $BASH_DIR/environment_setup
. $BASH_DIR/prompt
. $BASH_DIR/aliases

BASH_COMPLETION=$BASH_DIR/bash_completion
if [ -f $BASH_COMPLETION ]; then
   . $BASH_COMPLETION
fi

shopt -s autocd

#KEEP AT END FOR RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"